#!/bin/bash

set -e

source ${HTTPD_CONTAINER_SCRIPTS_PATH}/common.sh

echo "---> Enabling s2i support in httpd24 image"

config_s2i

######## CUSTOMIZATION STARTS HERE ############

echo "---> Installing application source"
#TODO copy html source code to workdir
cp -Rf /tmp/src/*.html ./
echo "print("hola desde python by agg")" > python.py
#TODO put date format an create an info page Page built on ...date.... and 
#in other line, Proudly serve by apache . Version $HTTPD_VERSION
# and y the end line, the author.
echo "---> Creating info page"
DATE=$(date +%d-%m-%Y)
echo "Page build on $DATE" > info.html
echo "Proudly server by apache. Version: $HTTPD_VERSION" >> info.html
echo "Build by AGG" >> info.html
echo "--->end Creating info page"

######## CUSTOMIZATION ENDS HERE ############

if [ -d ./httpd-cfg ]; then
  echo "---> Copying httpd configuration files..."
  if [ "$(ls -A ./httpd-cfg/*.conf)" ]; then
    cp -v ./httpd-cfg/*.conf "${HTTPD_CONFIGURATION_PATH}"
    rm -rf ./httpd-cfg
  fi
else
  if [ -d ./cfg ]; then
    echo "---> Copying httpd configuration files from deprecated './cfg' directory, use './httpd-cfg' instead..."
    if [ "$(ls -A ./cfg/*.conf)" ]; then
      cp -v ./cfg/*.conf "${HTTPD_CONFIGURATION_PATH}"
      rm -rf ./cfg
    fi
  fi
fi

# Fix source directory permissions
fix-permissions ./
